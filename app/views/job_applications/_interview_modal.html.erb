<!-- Button trigger modal -->
<a class="icon-text text-decoration-none" data-toggle="modal" data-target="#interviewModel-<%= @job_application.id %>">
  <i class="far fa-calendar-plus"></i>
  <span>Add interview</span>
</a>


<!-- Modal -->
<div class="modal fade" id="interviewModel-<%= @job_application.id %>" tabindex="-1" aria-labelledby="interviewModel-<%= @job_application.id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="interviewModel-<%= @job_application.id %>Label">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@job_application, @interview] do |f| %>
          <%= f.input :interview_type %>
          <%= f.input :notes %>
          <%= f.input :link %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.submit id:"form-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
