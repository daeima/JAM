<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contactModel-<%= interview.id %>">
  <i class="fa-solid fa-plus"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="contactModel-<%= interview.id %>" tabindex="-1" aria-labelledby="contactMode-<%= interview.id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contactModel-<%= interview.id %>Label">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [interview, Contact.new] do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :position %>
          <%= f.input :email %>
          <%= f.input :phone %>
          <%= f.input :contact_url %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
