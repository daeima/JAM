<h1>Show Page</h1>
<%= link_to "Edit", edit_job_application_path(@job_application), class:"primary-btn" %>
<ul>
  <li><%= @job_application.title %></li>
  <li><%= @job_application.level %></li>
  <li><%= @job_application.company_name %></li>
  <li><%= @job_application.status %></li>
  <li><%= link_to "Job link", @job_application.link %></li>
  <li><%= @job_application.address %></li>
  <li><%= @job_application.remote %></li>
  <li><%= @job_application.favorite %></li>
  <li><%= @job_application.notes %></li>
  <li><%= @job_application.description %></li>
  <li><%= @job_application.created_at %></li>
  <li><%= @job_application.updated_at %></li>
  <li><%= link_to "See Interview Details", job_application_interview_path(@job_application),class:"primary-btn" %></li>
  <li><%= link_to "Add Interview Details", new_job_application_interview_path(@job_application), class:"primary-btn" %></li>
</ul>

<% if current_user.job_application.favorite %>
  <div class="text-center"><%= link_to "favorite", class: "btn btn-secondary mt-5 visible"%></div>
<% end %>



<div class="card-header" style="width: 18rem;">
   <h2 class="text-center">Interviews</h2>
    <% @job_application.interviews.each do |interview| %>
        <%= link_to job_application_path(interview.job_application), class:'text-decoration-none' do %>
           <div class="card-body border border-primary">
               <p class="card-text">Start date: <%= interview.start_date %></p>
               <p class="card-text">End date: <%= interview.end_time %></p>
               <p class="card-text">Notes: <%= interview.notes %></p>
               <p class="card-text mb-3">Interview type:  <%= interview.interview_type %></p>
            <% end %>
               <%= link_to "Edit", edit_job_application_interview_path(@job_application, interview), class:'primary-btn' %>
               <%= link_to "Delete", job_application_interview_path(@job_application, interview), class:'primary-btn', method: :delete, data: { confirm: "Are you sure?" } %>
          </div> 
   <% end %> 
</div><br>
<%= link_to "Create a new interview", new_job_application_interview_path(@job_application), class: "primary-btn"%>
<%= link_to "Go back", job_applications_path, class:'primary-btn' %>


