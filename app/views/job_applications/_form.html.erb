
<%= simple_form_for(@job_application) do |f| %>
    <%= f.input :title %>
    <%= f.input :level %>
    <%= f.input :company_name %>
    <%= f.input :address %>
    <%= f.input :description, :input_html => {:rows => 7} %>
    <%= f.input :status, as: :select, collection: ["Pending", "In process", "Offer", "Rejected"], selected: "Pending"%>
    <%= f.input :notes, :input_html => {:rows => 7} %>
    <%= f.input :remote %>
    <%= f.input :favorite %>
    <%= f.input :archive %>
    <%= f.input :applied, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :comp_logo %>
    <%= f.submit id:"form-btn" %>
<% end %>
